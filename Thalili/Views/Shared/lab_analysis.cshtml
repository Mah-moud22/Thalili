@using Thalili.Models
@model search_view
@{
    ViewBag.Title = "Index";
}

<div class="searchPage">
    <div class="container">
        <form action="" class="row pt-5 w-75">
            <div style="position: relative;">
                <input class="mySearchField" type="search" name="searchField" placeholder="ابحث عن تحاليل او معامل" value="@ViewData["searchField"]">
                <input class="mySubmit-btn" type="submit" value="">
            </div>
        </form>
        <div class="row m-0 py-3 mySearchResult">
            <div class="col-9">
                <div class="testResult">
                    <p>نتائج التحاليل</p>
                    @foreach(var analyss in Model.analysisList)
                    {
                    <div class="row flex-column flex-md-row">
                        <a class="col-9 col-sm-6 col-md m-auto mt-4 m-md-0 ms-md-3  px-2  testSearchCard" href="">
                            <img class="mt-2 d-flex mx-auto" src="@analyss.img" alt="" style="width:97%; height:104px">
                            <p class="pt-2 m-2 m-md-0">@analyss.name</p>
                            <span class="m-2 m-md-0">@analyss.description </span>
                            <ul class="m-0 mt-2">
                                @foreach (var sampl in analyss.samples)
                                {
                                <li class="tag p-1 ms-1 mt-1">@sampl.sample_name</li>
                                }
                            </ul>
                            <button type="button" class="btn d-flex mx-auto my-3 justify-content-center" onclick="">المزيد من التفاصيل</button>
                        </a>
                        <div class="col-1" style="position: relative;">
                            <button class="carousel-control-prev d-none d-md-flex" type="button" id="nextElementBtn">
                                <i class="fa-solid fa-chevron-left"></i>
                            </button>
                        </div>
                    </div>
                    }
                </div>
                <div class="labResult">
                    <p>نتائج المعامل</p>
                    @{int curent = Convert.ToInt32(ViewData["page"]);
                    }
                    @for(int i=curent-1;i<Math.Min(Model.labList.Count(), curent);i++)
                    {
                        <div class="row row flex-column flex-md-row my-3s">
                            <a href="" class="col-9 col-sm-6 col-md m-auto mt-4  m-md-0 ms-md-3 labSearchCard py-3 row flex-column flex-md-row">
                                <div class="d-flex col-xl-3 col-md-4 col-12 m-auto m-md-0">
                                    <img class="m-auto" src="@Model.labList[i].img" alt="" style="height: 136px; width:100%">
                                </div>
                                <div class="col-md">
                                    <p class="m-2 m-md-0">@Model.labList[i].name</p>
                                    <div class="evaluation m-2 m-md-0" style="word-spacing: -10px;">
                                        @for (int j = 0; j < Model.labList[i].lab_rating; j++)
                                        {
                                            <i class="fa fa-star"></i>
                                        }
                                        <small>(@Model.labList[i].reviews.Count())</small>
                                    </div>
                                    <div class="location m-2 m-md-0">
                                        <img src="~/Content/Assets/imgs/Exclusion 10.png" alt="">
                                        <small>@Model.labList[i].location</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
                <nav class="paginat mt-3 mb-3">
                    <ul class="d-flex justify-content-center" style="list-style:none;">
                        <li class="page_item_arrow d-none"><i class="fa-solid fa-angle-right"></i></li>
                        @for (int i = 1; i <= Model.labList.Count(); i++)
                        {
                            if (i == curent)
                            {
                                <li class="page_item active" aria-current="page">
                                    <span class="page_link">@i</span>
                                </li>
                            }
                            else
                            {
                                if (ViewData["searchField"] == null)
                                {
                                    <li class="page_item"><a class="page_link" href="/Analysis_and_Labs/?page=@i">@i</a></li>
                                }
                                else
                                {
                                <li class="page_item"><a class="page_link" href="/search/?searchField=@ViewData["searchField"]&page=@i">@i</a></li>
                                }
                            }
                        }
                        <li class="page_item_arrow"><i class="fa-solid fa-angle-left"></i></li>
                    </ul>
                </nav>
            </div>
            <div class="col-3 filtterPart">
                <div class="container pt-3">
                    <p>التصفيات</p>
                    <hr>
                    <form action="/serach/filter" method="get" id="filtterForm">
                        <div>
                            <a class="collapsed d-flex flex-row justify-content-between" data-bs-toggle="collapse" href="#TypeofSearch">
                                <p class="mb-1">بحث في</p>
                                <i class="fa-solid fa-chevron-down"></i>
                            </a>
                            <div class="collapse show filtterOptions" id="TypeofSearch">
                                <input type="radio" id="typeAll" name="typeofsearch" value="الكل" checked>
                                <label for="typeAll"> الكل</label><br>
                                <input type="radio" id="typeLabs" name="typeofsearch" value="المعامل">
                                <label for="typeLabs"> المعامل</label><br>
                                <input type="radio" id="typeTest" name="typeofsearch" value="التحاليل">
                                <label for="typeTest"> التحاليل</label>
                            </div>
                        </div>
                        <div>
                            <a class="collapsed d-flex flex-row justify-content-between" data-bs-toggle="collapse" href="#TypeofTest">
                                <p class="mb-1"> السعر</p>
                                <i class="fa-solid fa-chevron-down"></i>
                            </a>
                            <div class="collapse show filtterOptions" id="TypeofTest">
                                <input type="radio" id="TestAll" name="typeoftest" value="الكل" checked>
                                <label for="TestAll"> الكل</label><br>
                                <input type="radio" id="bloodTest" name="typeoftest" value="اقل من 50">
                                <label for="bloodTest"> اقل من 50</label><br>
                                <input type="radio" id="coronaTest" name="typeoftest" value="من 50 حتى 100">
                                <label for="coronaTest"> من 50 حتى 100</label><br>
                                <input type="radio" id="urineTest" name="typeoftest" value="من 100 حتى 200">
                                <label for="urineTest"> من 100 حتى 200</label><br>
                                <input type="radio" id="urineTest" name="typeoftest" value="اكثر من 200">
                                <label for="urineTest"> اكثر من 200</label>
                            </div>
                        </div>
                        <div>
                            <a class="collapsed d-flex flex-row justify-content-between" data-bs-toggle="collapse" href="#Evaluatin">
                                <p class="mb-1"> التقييم</p>
                                <i class="fa-solid fa-chevron-down"></i>
                            </a>
                            <div class="collapse show filtterOptionsstar" id="Evaluatin">
                                <input type="radio" id="allEval" name="evaluatin" value="الكل" checked>
                                <label for="allEval"> الكل</label><br>
                                <input type="radio" id="fiveEval" name="evaluatin" value="5">
                                <label for="fiveEval" style="word-spacing: -10px;">
                                    <i class="fa fa-star col p-0"></i>
                                    <i class="fa fa-star col p-0"></i>
                                    <i class="fa fa-star col p-0"></i>
                                    <i class="fa fa-star col p-0"></i>
                                    <i class="fa fa-star col p-0"></i>
                                </label><br>
                                <input type="radio" id="fourEval" name="evaluatin" value="4">
                                <label for="fourEval" style="word-spacing: -10px;">
                                    <i class="fa fa-star col p-0"></i>
                                    <i class="fa fa-star col p-0"></i>
                                    <i class="fa fa-star col p-0"></i>
                                    <i class="fa fa-star col p-0"></i>
                                </label><br>
                                <input type="radio" id="threeEval" name="evaluatin" value="3">
                                <label for="threeEval" style="word-spacing: -10px;">
                                    <i class="fa fa-star col p-0"></i>
                                    <i class="fa fa-star col p-0"></i>
                                    <i class="fa fa-star col p-0"></i>
                                </label><br>
                                <input type="radio" id="twoEval" name="evaluatin" value="2">
                                <label for="twoEval" style="word-spacing: -10px;">
                                    <i class="fa fa-star col p-0"></i>
                                    <i class="fa fa-star col p-0"></i>
                                </label><br>
                                <input type="radio" id="oneEval" name="evaluatin" value="1">
                                <label for="oneEval" style="word-spacing: -10px;">
                                    <i class="fa fa-star col p-0"></i>
                                </label><br>
                            </div>
                        </div>
                        <input type="hidden" name="" value="">
                        <input class="my-3 w-100" type="submit" name="" value="تطبيــــق">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>